{{>layout/header}}

    <section>
        <div class="logo">
            <h1>마이페이지</h1>
        </div>
        <div class="mini_menubar_1">
            <div class="mini_menubar_2">
                <ul class="mini">
                    <li class="mini_li"><a href="/mypage" class="mini_li_a">QRcode</a></li>
                    <li class="mini_li"><a href="/editMember" class="mini_li_a">회원정보 수정</a></li>
                    <li class="mini_li"><a href="/tweetBook" class="mini_li_a">찜 목록</a></li>
                </ul>
            </div>
        </div>
        <div class="information">
            <h1 class="info">회원정보 수정</h1>
            <div class="sign-up-htm">
                <div class="info_group">
                    <div class="group">
                        <label for="user" class="label">이름</label>
                        <input id="user" type="text" class="input" name="name" value="{{name}}">
                    </div>
                    <div class="group">
                        <label for="phone" class="label">전화번호</label>
                        <input id="phone" type="text" class="input" placeholder="연락처 예시 (010-XXXX-XXXX)" name="phone" value="{{phone}}">
                    </div>
                    <div class="group">
                        <label for="email" class="label">이메일</label>
                        <input id="email" type="text" class="input" placeholder="이메일 예시 (example@naver.com)" name="email" value="{{email}}">
                    </div>
                    <div class="group">
                        <label for="nickname" class="label">아이디</label>
                        <input id="nickname" type="text" class="input" name="username" value="{{id}}" readonly>
                    </div>
                    <div class="group">
                        <label for="pass" class="label">비밀번호</label>
                        <input id="pass" type="password" class="input" data-type="password" name="pwd">
                        <i class="fa fa-eye fa-lg"></i>
                    </div>
                    <div class="btn">
                        <input type="submit" class="button" onclick="index.update()" value="수정">
                        <input type="button" class="button" onclick="window.location.href='/'" value="취소">
                    </div>
                </div>
            </div>
        </div>
    </section>

{{>layout/footer}}